body
  font-family 'Open Sans'
  position relative
  background black

  #top-bar
    background rgba(black, 0.8)
    padding 20px
    position fixed
    text-align center
    top 0
    width 100%
    z-index 1000
    
    #error-message1
      color rgba(white, .5)
      display inline-block
      margin-left 20px

  #logo
    bottom 20px
    left 20px
    position fixed
    z-index 1000

    img
      height 80px
      
  #about-div
    bottom 20px
    right 20px
    position fixed
    z-index 1000

    a
      color #d7a349
      font-size 20px
      text-decoration none
      text-shadow 0px 1px 3px black
      font-weight bold

  .divider
    background #b89264
    height 5px

  #section1
    align-items center
    background url("../images/bg1.jpg")
    background-attachment fixed
    background-position center
    background-repeat no-repeat
    background-size: cover
    display flex
    justify-content center
    min-height 100vh
    padding-top 100px
    position relative
    
    .user-champions
      border-radius 5px
      display flex
      margin 0 auto
      max-width 900px
      padding: 20px 0;
      
      .div-flexed
        flex 1
        
        a
          text-decoration none
      
      .champion
        .champ-img
          background-position center
          background-size 80px 80px
          border-radius 50%
          display inline-block
          height 70px
          width 70px
          border 2px solid #C8AC7F
          
        .champ-name
          color white
          font-weight 600
          text-shadow 0 1px 3px black
          font-size 15px
            
  .section

    .centered
      border-radius 5px
      width 1075px
      text-align center

      .welcome-text
        font-size 30px
        color white
        text-shadow 2px 2px 5px #080808
        margin-bottom 20px

        span
          font-weight 600

      .frame-container
        display inline-block
        height 480px
        position relative
        width 900px

        .champion-square
          border-radius 50%
          height 84px
          left 410px
          position absolute
          top 17px

        .frame-bg
          background url("../images/banner.jpg")
          background-position center center
          background-repeat no-repeat
          background-size: cover;
          height 390px
          left 20px
          position absolute
          top 45px
          width 860px

        .champion-name
          color #F4A02F
          font-size 27px
          font-weight: bold;
          left 30px
          position absolute
          top 45px

        .frame
          background url("../images/frame.png")
          background-repeat: no-repeat;
          background-size 900px 480px
          height 100%
          position absolute
          width 100%

        .info-container
          position absolute
          height 295px
          width 808px
          top 115px
          left 46px
          display flex

          .inner-section
            flex 0.8
            height 100%
            
            &.mid
              flex 1

            .titulo
              font-size 22px
              font-weight 600
              color #F4A02F
              margin-bottom 30px

            .contenido
              table
                margin 0 auto

                tr
                  color #F4A02F

                .thead
                  text-align left
                  padding-right 5px
                  font-weight 600
                  width 60px
                  height 30px

                .tdata
                  text-align right
                  min-width 50px
                  color #F0F8FF

                  &.uno
                    padding-right 15px
                    
              #suggestion
                margin-top 30px
                color #F4A02F
                
                a
                  color white
                  font-weight 600
                  text-decoration none

  input
    background transparent
    border none
    outline none
    color #D7A349
    font-size 20px
    border-bottom 1px solid #B89264
    text-align center
    text-shadow 2px 2px 5px #080808

    &::-webkit-input-placeholder {
      text-align center
      color #D7A349
    }

    &:-moz-placeholder { /* Firefox 18- */
      text-align center
      color #D7A349
    }

    &::-moz-placeholder {  /* Firefox 19+ */
      text-align center
      color #D7A349
    }

    &:-ms-input-placeholder {
      text-align center
      color #D7A349
    }

  #error-message
    color #A47A32

  #dropdownregion
    margin 0 20px
    min-width 100px
    background transparent
    border none
    font-size 20px

    .dropdown
      &.icon
        color #D7A349

    .text
      color #D7A349
      text-shadow 2px 2px 5px #080808

    .menu
      background rgba(black,0.8)
      border none
      border-radius 10px

      .item
        border none
        color #D7A349
        font-size 14px

      &::-webkit-scrollbar {
        width: 8px;
      }

      &::-webkit-scrollbar-track {
        border-radius: 10px;
      }

      &::-webkit-scrollbar-thumb {
        background #d7a349
        border-radius: 10px;
      }

  #go
    background transparent
    border 1px solid #d7a349
    border-radius 50%
    box-shadow 0px 0px 5px 2px #080808
    color #d7a349
    font-size 20px
    outline none
    padding 5px 5px
    text-shadow 2px 2px 5px #080808
    transition box-shadow .5s

    &:focus
    &:hover
      box-shadow 0px 0px 10px 3px #d7a349

  #section2
    align-items: center;
    background url("../images/bg2.jpg")
    bacbackground-attachment fixed
    background-position center
    background-repeat no-repeat
    background-size: cover
    display: flex;
    min-height 100vh
    justify-content: center;
    position: relative;
    
    .centered
      display flex
    
      .top-champions
        border-radius 5px
        display: inline-block;
        padding-top: 20px;
        flex 0.1
        
        .champion
          display: inline-block;
          margin-bottom 20px
          
          .champ-img
            background-position center
            background-size 80px 80px
            border-radius 50%
            display inline-block
            height 70px
            width 70px
            border 2px solid #C8AC7F
            
          .champ-name
            color white
            font-weight 600
            text-shadow 0 1px 3px black
            font-size 15px

      .chart-container
        background rgba(0, 0, 0, .5)
        border-radius 5px
        display inline-block
        flex 1
        margin-left 25px
        height 600px
        width 950px
        padding 20px
        
        .title
          color #F0D895
          font-size 20px
          
  #section3
    align-items center
    background url("../images/bg3.jpg")
    background-attachment fixed
    background-position center
    background-repeat no-repeat
    background-size: cover
    display flex
    justify-content center
    min-height 100vh
    padding-top 100px
    position relative
    
    .centered
      background rgba(black, 0.5)
      border-radius 5px
      padding 20px
      
      .title
        color #fcc47c
        font-family 'Kanit'
        font-size 22px
        font-style italic
        font-weight 600
        margin-bottom 20px
        
      .text
        color #EFE0CD
        font-family 'Kanit'
        font-size 17px
        margin-bottom 20px
        text-align justify
        
        .textTitle
          color #fcc47c
          font-family 'Kanit'
          font-size 19px
          font-style italic
          font-weight 600
          margin-bottom 5px
          text-align left
          
        a
          text-decoration underline
          color #D7A349
        
      .img
        border-radius 5px
        box-shadow 0px 0px 10px 2px black
        display inline-block
        margin-bottom 20px
        overflow hidden
        
        img
          max-width 900px